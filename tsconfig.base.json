{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@smart-assistant/prisma": ["libs/shared/prisma/src/index.ts"],
      "@smart-assistant/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@smart-assistant/shared/types": ["libs/shared/types/src/index.ts"],
      "@smart-assistant/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
